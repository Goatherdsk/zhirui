# 智睿商务车网站 Docker 环境配置

# 端口配置
HOST_PORT=8080
HTTPS_PORT=8443

# 环境设置
NODE_ENV=production

# 容器配置
CONTAINER_NAME=zhirui-business-website
NETWORK_NAME=zhirui-network

# 时区设置
TZ=Asia/Shanghai

# Nginx 配置
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# 应用配置
APP_NAME=智睿商务车网站
APP_VERSION=1.0.0
APP_URL=http://localhost:8080

# 监控配置（可选）
ENABLE_MONITORING=false
ENABLE_LOGGING=true

# 性能配置
MAX_MEMORY=512m
MAX_CPU=1.0
